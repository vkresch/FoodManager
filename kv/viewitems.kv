#:kivy 1.10.0
<ViewItemsScreen>
    BoxLayout:
        orientation: 'vertical'
        # size_hint_y:1.15
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            BoxLayout:
                orientation:'horizontal'
                size_hint_y: None
                height: '48dp'
                MDTextField:
                    id: searchItems
                    hint_text: "Search Item"
                    write_tab: False
                    multiline: False
                    on_text: app.filter_items(self.text)
                MDIconButton:
                    icon: 'plus'
                    on_release:
                        app.root.ids.scr_mngr.transition.direction='left'
                        app.root.ids.scr_mngr.current = 'input'
                        app.edit_item_bool = False
                MDIconButton:
                    icon: 'table-edit'
                    on_release:
                        app.edit_item()
                MDIconButton:
                    icon: 'delete'
                    on_release: 
                        app.show_warning_delete_item_dialog()
                        

######################################################

            RecycleView:
                id: dbOutput
                viewclass: 'SelectableItemLabel'
                SelectableRecycleBoxLayout:
                    default_size: None, dp(30)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: False
                    touch_multiselect: False



######################################################

        MDSeparator:
            height: dp(4)

        # Splitter:
        #     sizable_from: 'top'
        #     min_size: 10
        #     orientation:'vertical'
        #     max_size:'200pt'
        #     min_size:'100pt'           
        BoxLayout:
            orientation:'vertical'
            padding: '5dp'
            MDCard:           
                BoxLayout:
                    orientation:'vertical'
                    padding: dp(8)
                    BoxLayout:
                        orientation:'horizontal'
                        height: '48dp'
                        size_hint_y: None
                        MDLabel:
                            id:itemID
                            text: 'Item'
                            theme_text_color: 'Primary'
                            font_style:"Title"
                            size_hint_y: None
                            height: dp(36)
                        MDIconButton:
                            icon: 'food-apple' 
                        MDIconButton:
                            icon:'refresh'
                            on_release: app.refresh_all()
                        MDIconButton:
                            icon: 'dots-vertical'


                    MDSeparator:
                        height: dp(2)

                    BoxLayout:
                        orientation:'horizontal'
                        ScrollView:
                            MDLabel:
                                id:infoView
                                halign:'center'
                                theme_text_color: 'Primary'
                                font_size:40
                                height: dp(36)
                            
