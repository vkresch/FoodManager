#:kivy 1.10.0
<InputItemsScreen>
    BoxLayout:
        orientation:'vertical'
        ScrollView:
            id:inputscroll
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: dp(48)
                spacing: 10
                MDTextField:
                    id: itemname
                    hint_text: "Name"
                    helper_text: "Name of the item?"
                    helper_text_mode: "on_focus"
                    write_tab: False
                    multiline: False
                    # required: True
                    on_focus: inputscroll.scroll_y=1
                MDTextField:
                    id: itemweight
                    hint_text: "Weight"
                    helper_text: "Total weight of the item? [g]"
                    helper_text_mode: "on_focus"
                    write_tab: False
                    multiline: False
                    # required: True
                    on_focus: inputscroll.scroll_y=0.9
                MDTextField:
                    id: itemcost
                    hint_text: "Cost"
                    helper_text: "Cost of the item? [â‚¬]"
                    helper_text_mode: "on_focus"
                    write_tab: False
                    multiline: False
                    # required: True
                    on_focus: inputscroll.scroll_y=0.8
                    on_text_validate: 
                        app.add_item(itemname.text, itemweight.text, itemcost.text)
                        app.refresh_all()
                        itemname.focus = True


                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '300dp'
                    padding: '5dp'
                    opacity:0

                    canvas:
                        
                        Color:
                            rgb: .3, .3, .3
                        Rectangle:
                            pos: self.pos
                            size: self.size

    

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            padding: '5dp'

            canvas:
                Color:
                    rgb: .3, .3, .3
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDIconButton:
                icon: 'arrow-left'
                on_release:
                    app.root.ids.scr_mngr.transition.direction='right'
                    app.root.ids.scr_mngr.current = 'viewitems'
                    app.refresh_all()
                    itemname.text=""
                    itemweight.text=""
                    itemcost.text=""
                    app.edit_item_bool = False
            MDIconButton:
                id: float_act_btn
                icon: 'content-save'
                on_release: 
                    app.add_item(itemname.text, itemweight.text, itemcost.text)
                    app.refresh_all()
